{
	"private": true,
	"sideEffects": false,
	"scripts": {
		"typecheck": "tsc -b",
		"build": "run-s \"build:*\"",
		"build:css": "npm run generate:css -- --minify",
		"build:remix": "remix build",
		"dev": "run-p \"dev:*\"",
		"dev:css": "npm run generate:css -- --watch",
		"dev:remix": "remix dev",
		"generate:css": "npx tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css",
		"prepare": "husky install"
	},
	"dependencies": {
		"@radix-ui/react-radio-group": "^1.1.1",
		"@remix-run/node": "^1.11.1",
		"@remix-run/react": "^1.11.1",
		"@remix-run/vercel": "^1.11.1",
		"@thomasngrlt/spotify-web-api-ts": "^1.6.0",
		"@vercel/node": "^2.8.15",
		"date-fns": "^2.29.3",
		"framer-motion": "^8.5.0",
		"iconoir-react": "^6.0.0",
		"isbot": "^3.6.5",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-wrap-balancer": "^0.3.0",
		"zod": "^3.20.2"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.11.1",
		"@remix-run/eslint-config": "^1.11.1",
		"@remix-run/serve": "^1.11.1",
		"@types/react": "^18.0.27",
		"@types/react-dom": "^18.0.10",
		"eslint": "^8.32.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.4",
		"prettier-plugin-tailwindcss": "^0.2.2",
		"tailwindcss": "^3.2.4",
		"typescript": "^4.9.4"
	},
	"engines": {
		"node": ">=14"
	},
	"lint-staged": {
		"*.js": "eslint --cache --fix",
		"*.{js,css,md}": "prettier --write"
	}
}
